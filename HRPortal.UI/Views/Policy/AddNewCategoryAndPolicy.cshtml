@model HRPortal.UI.Models.CreatePolicyVM

@{
    ViewBag.Title = "Add New Category And Policy";
}

<h2>Add a New Policy in a New Category</h2>

<div>
@using (Html.BeginForm("AddNewCategoryAndPolicy", "Policy", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Policy.PolicyId)
    @Html.ValidationSummary(true)

    @Html.ValidationMessageFor(m => m.Policy.Title)
    <p>Policy Title*: @Html.EditorFor(m => m.Policy.Title)</p>
    @Html.ValidationMessageFor(m => m.Policy.Category)
    <p>Policy Category*: @Html.EditorFor(m => m.Policy.Category)</p>
    @Html.ValidationMessageFor(m => m.Policy.ContentText)
    <p>Content Text*: @Html.EditorFor(m => m.Policy.ContentText)</p>

    <button type="reset" class="btn btn-warning">RESET</button>
    <button type="Submit" class="btn btn-success">Submit</button>
}
</div>
