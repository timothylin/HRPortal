    </tr>
    <tr>
        <td>City</td>
        <td>@Html.DisplayFor(m => m.ApplicantContactInfo.Address.City)</td>
    </tr>
    <tr>
        <td>State</td>
        <td>@Html.DisplayFor(m => m.ApplicantContactInfo.Address.State)</td>
    </tr>
    <tr>
        <td>Zip Code</td>
        <td>@Html.DisplayFor(m => m.ApplicantContactInfo.Address.Zipcode)</td>
    </tr>
    <tr>
        <td>Desired Position</td>
        <td>@Html.DisplayFor(m => m.Position.PositionName)</td>
    </tr>
        <tr>
            <td>Desired Salary</td>
            <td>@Html.DisplayFor(m => m.DesiredSalary)</td>
        </tr>

