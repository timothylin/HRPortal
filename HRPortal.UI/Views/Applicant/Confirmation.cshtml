        </tr>
        <tr>
            <td>Last Name</td>
            <td>@Html.DisplayFor(m => m.ApplicantContactInfo.LastName)</td>
        </tr>
        <tr>
            <td>Suffix</td>
            <td>@Html.DisplayFor(m => m.ApplicantContactInfo.Suffix)</td>
        </tr>
    <tr>
        <td>Email</td>
        <td>@Html.DisplayFor(m => m.ApplicantContactInfo.Email)</td>
    </tr>
    <tr>
        <td>Phone Number</td>
        <td>@Html.DisplayFor(m => m.ApplicantContactInfo.PhoneNumber)</td>
    </tr>
