@model List<HRPortal.Models.Resume>

@{
    ViewBag.Title = "View All Resumes";
}

<h2>View All Resumes</h2>

@foreach (var r in Model)
{
    <p>AppID: @Html.DisplayFor(m => r.AppId)</p>
    <p>Prefix: @Html.DisplayFor(m => r.ApplicantContactInfo.Prefix)</p>
    <p>First Name: @Html.DisplayFor(m => r.ApplicantContactInfo.FirstName)</p>
    <p>Last Name: @Html.DisplayFor(m => r.ApplicantContactInfo.LastName)</p>
    <p>Suffix: @Html.DisplayFor(m => r.ApplicantContactInfo.Suffix)</p>
    <p>Email: @Html.DisplayFor(m => r.ApplicantContactInfo.Email)</p>
    <p>Phone Number: @Html.DisplayFor(m => r.ApplicantContactInfo.PhoneNumber)</p>
    <p>Address Line 1: @Html.DisplayFor(m => r.ApplicantContactInfo.Address.AddressLine1)</p>
    <p>Address Line 2: @Html.DisplayFor(m => r.ApplicantContactInfo.Address.AddressLine2)</p>
    <p>City: @Html.DisplayFor(m => r.ApplicantContactInfo.Address.City)</p>
    <p>State: @Html.DisplayFor(m => r.ApplicantContactInfo.Address.State)</p>
    <p>Zipcode*: @Html.DisplayFor(m => r.ApplicantContactInfo.Address.Zipcode)</p>
    <p>Desired Position: @Html.DisplayFor(m => r.Position.PositionId)</p>
    <p>Education Degree: @Html.DisplayFor(m => r.Education[0].Degree.DegreeAbbr)</p>
    <p>Desired Salary: @Html.DisplayFor(m => r.DesiredSalary)</p>
    <p>Date of Application: @Html.DisplayFor(m => r.AppDate)</p>
    <p></p>
}

@Html.ActionLink("Return to Admin Page", "Index", "Admin", null, new { @class = "btn btn-primary" })
