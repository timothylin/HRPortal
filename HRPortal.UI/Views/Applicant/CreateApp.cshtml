@model HRPortal.UI.Models.CreateAppVM

@{
    ViewBag.Title = "CreateApp";
}

<h2>Submit a New Application</h2>

@using (Html.BeginForm("CreateApp", "Applicant", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ApplicationInfo.AppId)
    @Html.ValidationSummary(true)

    /*Contact Info*/
    <p>Prefix: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.Prefix)</p>
    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.FirstName)</p>
    <p>First Name*: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.FirstName)</p>
    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.LastName)</p>
    <p>Last Name*: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.LastName)</p>
    <p>Suffix: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.Suffix)</p>

    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.Email)</p>
    <p>Email*: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.Email)</p>
    /*Set Email Type*/

    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.PhoneNumber)</p>
    <p>Phone Number*: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.PhoneNumber)</p>
    /*Set Phone Type*/

    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.AddressLine1)</p>
    <p>Address Line 1*: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.AddressLine1)</p>
    <p>Address Line 2: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.AddressLine2)</p>
    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.City)</p>
    <p>City*: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.City)</p>
    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.State)</p>
    <p>State*: @Html.DropDownListFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.State, Model.States)</p>
    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.Zipcode)</p>
    <p>Zipcode*: @Html.EditorFor(m => m.ApplicationInfo.ApplicantContactInfo.Address.Zipcode)</p>
    /*Set Address Type*/

    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.Position.PositionName)</p>
    <p>Desired Position*: @Html.DropDownListFor(m => m.ApplicationInfo.Position.PositionName, Model.Positions)</p>

    <p>@Html.LabelFor(m => m.ApplicationInfo.Experiences)</p>
    <p>@foreach (var exp in Model.ApplicationInfo.Experiences)
       {
           <p>Company: @Html.EditorFor(m => exp.Company)</p>
           <p>Title: @Html.EditorFor(m => exp.Title)</p>
           <p>City: @Html.EditorFor(m => exp.Location.City)</p>
           <p>State: @Html.EditorFor(m => exp.Location.State)</p>
           <p>Start Date: @Html.EditorFor(m => exp.StartDate)</p>
           <p>End Date: @Html.EditorFor(m => exp.EndDate)</p>
           <p>Supervisor Name: @Html.EditorFor(m => exp.SupervisorName)</p>
           <p>Supervisor Phone Number: @Html.EditorFor(m => exp.SupervisorPhone)</p>
           <p>Supervisor Email: @Html.EditorFor(m => exp.SupervisorEmail)</p>
       }</p>


    //<p>Education Degree: @Html.DropDownListFor(m => m.ApplicationInfo.Education, Model.Degrees)</p>

    <p>@Html.ValidationMessageFor(m => m.ApplicationInfo.DesiredSalary)</p>
    <p>Desired Salary*: @Html.EditorFor(m => m.ApplicationInfo.DesiredSalary)</p>

    <p>Date of Application: @Html.EditorFor(m => m.ApplicationInfo.AppDate)</p>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-primary">Reset</button>

}

